<!-- sections/instagram-grid.liquid -->
<style>
  .ninth-section-{{ section.id }} {
    width: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background-color: {{ section.settings.background_color }};
    padding: 50px 0;
  }

  .ninth-section-{{ section.id }} .section-header h2 {
    text-align: center;
    margin: 0;
    padding: 0;
    font-size: 45px;
    letter-spacing: .3em;
    color: {{ section.settings.text_color }};
    font-weight: 300;
    text-transform: uppercase;
  }

  .ninth-section-{{ section.id }} .background {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    margin: auto 0;
    overflow: hidden;
  }

  .ninth-section-{{ section.id }} .background svg {
    width: 100%;
    height: 120%;
  }

  .ninth-section-{{ section.id }} .background svg path {
    stroke: {{ section.settings.svg_stroke_color }};
    stroke-width: 1;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ninth-section-{{ section.id }} .content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: 30px;
    width: 70%;
    max-width: 950px;
    z-index: 1;
  }

  .ninth-section-{{ section.id }} .content img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ninth-section-{{ section.id }} footer {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 12px;
  }

  .ninth-section-{{ section.id }} footer h2 {
    margin: 0;
    padding: 0;
    font-size: 45px;
    letter-spacing: .3em;
    color: {{ section.settings.text_color }};
    font-weight: 300;
    text-transform: uppercase;
  }

  .tenth-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 50px;
    padding-bottom: 50px;
  }

  .tenth-section-{{ section.id }} .section-header h2 {
    color: {{ section.settings.text_color }};
    font-size: 90px;
    font-weight: 300;
    margin-bottom: 0;
    text-align: center;
  }

  .tenth-section-{{ section.id }} .background {
    width: 100%;
  }

  .tenth-section-{{ section.id }} .background svg {
    width: 100%;
  }

  .tenth-section-{{ section.id }} .background svg path {
    stroke: {{ section.settings.svg_stroke_color }};
  }

  .tenth-section-{{ section.id }} .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .tenth-section-{{ section.id }} .content a {
    padding: 18px 40px;
    border: 1px solid {{ section.settings.button_border_color }};
    border-radius: 100px;
    text-decoration: none;
    color: {{ section.settings.button_text_color }};
    transition: all 0.3s ease;
    font-size: 16px;
  }

  .tenth-section-{{ section.id }} .content a:hover {
    background-color: {{ section.settings.button_border_color }};
    color: {{ section.settings.button_hover_text_color }};
  }

  @media (max-width: 1300px) {
    .ninth-section-{{ section.id }} .section-header h2,
    .ninth-section-{{ section.id }} footer h2 {
      font-size: 35px;
    }
  }

  @media (max-width: 870px) {
    .ninth-section-{{ section.id }} .section-header h2,
    .ninth-section-{{ section.id }} footer h1 {
      font-size: 25px;
    }
    .ninth-section-{{ section.id }} .background {
      top: -30px;
    }
  }

  @media (max-width: 600px) {
    .ninth-section-{{ section.id }} {
      padding: 10px 0;
    }
    .ninth-section-{{ section.id }} .section-header h2,
    .ninth-section-{{ section.id }} footer h1 {
      font-size: 20px;
      text-align: center;
    }
    .tenth-section-{{ section.id }} .section-header h2 {
      font-size: 40px;
    }
  }

  @media (max-width: 450px) {
    .ninth-section-{{ section.id }} .section-header h2,
    .ninth-section-{{ section.id }} footer h1 {
      font-size: 15px;
      text-align: center;
    }
    .ninth-section-{{ section.id }} .background {
      top: -50px;
    }
    .ninth-section-{{ section.id }} .content {
      gap: 10px;
    }
  }

  @media (max-width: 850px) {
    .tenth-section-{{ section.id }} .content a {
      width: auto;
      height: auto;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 14px 30px;
    }
  }
</style>

<article class="tenth-section tenth-section-{{ section.id }}">
  <header class="section-header">
    <h2 style="opacity: 1;">
      {{ section.settings.arabic_title }}
    </h2>
  </header>

  <div class="background bottom-svg">
    {% if section.settings.svg_code != blank %}
      {{ section.settings.svg_code }}
    {% endif %}
  </div>

  <div class="content" style="opacity: 1; transform: none;">
    <a href="{{ section.settings.button_link }}" color="white" tabindex="0" 
       style="border-color: {{ section.settings.button_border_color }}; color: {{ section.settings.button_text_color }};">
      {{ section.settings.button_text }}
    </a>
    <div class="forms"></div>
  </div>
</article>

{% schema %}
{
  "name": "Banner Bottom Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Bottom Section"
    },
    {
      "type": "text",
      "id": "arabic_title",
      "label": "Arabic Title",
      "default": "عندنا بعد أكثر"
    },
    {
      "type": "textarea",
      "id": "svg_code",
      "label": "SVG Code",
      "info": "Paste your SVG code here"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "عرض جميع المنتجات"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button Border Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Button Hover Text Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Banner Bottom Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}