{%- if product != blank -%}
  {%- liquid
    assign gift_card_recipient_feature_active = false
    assign show_dynamic_checkout = false
    assign send_gift_block = section.blocks | where: 'type', 'send_gift' | first
    assign send_gift_enabled = false
    
    # Use translation key for the default label
    assign send_gift_label = 'products.gift.send_as_gift' | t 
    
    if block != blank
      if block.settings.show_gift_card_recipient and product.gift_card?
        assign gift_card_recipient_feature_active = true
      endif
      if block.settings.show_dynamic_checkout
        assign show_dynamic_checkout = true
      endif
    endif
    assign wishlist = pages.wishlist
    assign compare = pages.compare
    assign action_when_click_added_wishlist = theme_st.action_when_click_added_wishlist
    assign show_quantity = settings.show_quantity_input

    if send_gift_block != blank and send_gift_block.settings.enabled and product.gift_card? != true
      assign send_gift_enabled = true
      if send_gift_block.settings.toggle_label != blank
        assign send_gift_label = send_gift_block.settings.toggle_label
      endif
    endif
  -%}
  {% if settings.enable_catalog_mode == false %}
    <div class="product__submit-form buy-btn-js d-flex flex-wrap btn-large">
      {% if send_gift_enabled %}
        {{ 'gift-fields.css' | asset_url | stylesheet_tag }}
        <script src="{{ 'product-size-toggle.js' | asset_url }}" defer></script>
      {% endif %}
      <product-form
        class="d-block product-form flex-1"
        data-hide-errors="{{ gift_card_recipient_feature_active }}"
        data-section-id="{{ section.id }}"
      >
        {% if type != 'sticky' %}
          <div class="product-form__error-message-wrapper" role="alert" hidden>
            <div class="form__message error inline-flex align-center">
              {%- render 'icon-error' -%}
              <span class="product-form__error-message ml-5"></span>
            </div>
          </div>
        {% endif %}
        {%- form 'product',
          product,
          id: product_form_id,
          class: formClass,
          novalidate: 'novalidate',
          data-type: 'add-to-cart-form'
        -%}
          <input
            type="hidden"
            name="id"
            value="{{ product.selected_or_first_available_variant.id }}"
            disabled
            class="product-variant-id"
          >
          {% if send_gift_enabled %}
            <div class="gift-fields-wrapper" data-send-gift-wrapper>
              <label class="gift-toggle-label">
                <input
                  type="checkbox"
                  class="gift-toggle-input"
                  data-send-gift-toggle
                  id="SendGiftToggle-{{ section.id }}"
                >
                <span>{{ send_gift_label }}</span>
              </label>
              <div
                class="gift-fields-grid hidden"
                data-gift-fields-container
                aria-hidden="true"
              >
                <input
                  type="hidden"
                  name="properties[Product Type]"
                  value="Send as a Gift"
                  data-gift-hidden-field
                >
                <div class="gift-field">
                  <label for="GiftRecipientName-{{ section.id }}">{{ 'products.gift.recipient_name' | t }}</label>
                  <input
                    id="GiftRecipientName-{{ section.id }}"
                    type="text"
                    name="properties[Recipient Name]"
                    data-gift-required
                  >
                </div>
                <div class="gift-field">
                  <label for="GiftRecipientPhone-{{ section.id }}">{{ 'products.gift.recipient_phone' | t }}</label>
                  <input
                    id="GiftRecipientPhone-{{ section.id }}"
                    type="tel"
                    name="properties[Recipient Phone]"
                    data-gift-required
                  >
                </div>
                <div class="gift-field">
                  <label for="GiftRecipientAddress-{{ section.id }}">{{ 'products.gift.recipient_address' | t }}</label>
                  <input
                    id="GiftRecipientAddress-{{ section.id }}"
                    type="text"
                    name="properties[Recipient Address]"
                    data-gift-required
                  >
                </div>
                <div class="gift-field">
                  <label for="GiftMessage-{{ section.id }}">{{ 'products.gift.message' | t }}</label>
                  <textarea
                    id="GiftMessage-{{ section.id }}"
                    name="properties[Gift Message]"
                  ></textarea>
                </div>
                <div class="gift-field">
                  <label for="GiftDeliveryDate-{{ section.id }}">{{ 'products.gift.delivery_date' | t }}</label>
                  <input
                    id="GiftDeliveryDate-{{ section.id }}"
                    type="date"
                    name="properties[Delivery Date]"
                  >
                </div>
              </div>
            </div>
          {% endif %}

          {%- if gift_card_recipient_feature_active -%}
            {%- render 'gift-card-recipient-form', product: product, form: form, section: section -%}
          {%- endif -%}

          <div class="product-form__buttons btn-large flex flex-wrap gap-10">
            <div class="product__submit-form-cart flex flex-wrap gap-10 gap-lg-20 align-center grow-1">
              <div class="button_buy-now grow-1 skeleton-loading">
                <button
                  type="submit"
                  name="add"
                  class="add_to_cart_button btn btn-primary w-full product_submit_button product-form__submit"
                  {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
                >
                  <span class="btn-label">
                    {%- if product.selected_or_first_available_variant.available == false -%}
                      {{ 'products.product.general.outstock' | t }}
                    {%- else -%}
                      {{ 'products.product.general.add_to_cart' | t }}
                    {%- endif -%}
                  </span>
                </button>
              </div>
            </div>
          </div>
        {%- endform -%}
      </product-form>
    </div>

    {% if send_gift_enabled %}
      <script>
        (function () {
          function initGiftValidation() {
            var wrappers = document.querySelectorAll('[data-send-gift-wrapper]');
            wrappers.forEach(function (wrapper) {
              var toggle = wrapper.querySelector('[data-send-gift-toggle]');
              var fieldsContainer = wrapper.querySelector('[data-gift-fields-container]');
              var requiredFields = wrapper.querySelectorAll('[data-gift-required]');
              var form = wrapper.closest('form');
              if (!form) return;

              function validateGiftFields() {
                if (!toggle.checked) return true;
                var hasError = false;
                requiredFields.forEach(function (field) {
                  if (!(field.value || '').trim()) {
                    hasError = true;
                    field.classList.add('gift-field__input-error');
                  } else {
                    field.classList.remove('gift-field__input-error');
                  }
                });

                if (hasError) {
                  var errorMessage = form.closest('product-form').querySelector('.product-form__error-message');
                  if (errorMessage) errorMessage.textContent = "{{ 'products.gift.error_message' | t }}";
                  form.closest('product-form').querySelector('.product-form__error-message-wrapper').hidden = false;
                }
                return !hasError;
              }

              toggle.addEventListener('change', function () {
                fieldsContainer.classList.toggle('hidden', !toggle.checked);
              });

              form.addEventListener('submit', function (event) {
                if (!validateGiftFields()) {
                  event.preventDefault();
                  event.stopImmediatePropagation();
                }
              });
            });
          }
          initGiftValidation();
        })();
      </script>
    {% endif %}
  {% endif %}
{%- endif -%}