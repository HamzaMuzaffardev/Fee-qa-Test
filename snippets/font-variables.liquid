{% liquid
  if request.locale.iso_code == 'en' 
  assign font_family_body = 'Alexandria'
  assign font_family_heading = 'Alexandria'
 else 
  assign font_family_body = 'Bahij TheSans Arabic Plain'
  assign font_family_heading = 'Bahij TheSans Arabic'
 endif  

  assign font_family_body = 'Alexandria'
  assign font_family_heading = 'Alexandria'

  assign theme_st = settings
  assign font_type_body = theme_st.font_type_body
  assign font_body_shopify = theme_st.font_body_system
  assign font_body_google = theme_st.font_body_google
  assign font_body_google_embed = theme_st.font_body_google_embed

  assign font_type_heading = theme_st.font_type_heading
  assign font_heading_shopify = theme_st.font_heading_system
  assign font_heading_google = theme_st.font_heading_google
  assign font_body_heading_embed = theme_st.font_body_heading_embed
%}

{% comment %} Start check setting font {% endcomment %}
{% if font_type_body == 'default_font' %}
  {{
    'Alexandria-Regular.ttf'
    | asset_url
    | preload_tag: as: 'font', type: 'font/ttf', crossorigin: 'anonymous'
  }}
  
  {% style %}
    @font-face {
    font-family: 'Bahij TheSans Arabic';
    src: url('https://cdn.shopify.com/s/files/1/0746/3213/4853/files/Bahij_TheSansArabic_Bold.ttf?v=1763112531') format('truetype');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
  /* Bahij TheSans Arabic Plain Font */
  @font-face {
    font-family: 'Bahij TheSans Arabic Plain';
    src: url('https://cdn.shopify.com/s/files/1/0746/3213/4853/files/Bahij_The_Sans_Arabic_Plain_.com.ttf?v=1763127092') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Light.ttf?v=1749994577") format("truetype");
      font-weight: 300;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Regular.ttf?v=1749994577") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Medium.ttf?v=1749994577") format("truetype");
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Bold.ttf?v=1749994577") format("truetype");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
  {% endstyle %}
{% elsif font_type_body == 'google' %}
  {% assign font_family_body = font_body_google %}
  {{ font_body_google_embed }}
{% else %}
  {% # theme-check-disable AssetPreload %}
  <link rel="preload" as="font" href="{{ font_body_shopify | font_url }}" type="font/woff2" crossorigin>
  {% # theme-check-disable AssetPreload %}
  {%- capture font_family_body -%}{{ font_body_shopify.family }}, {{ font_body_shopify.fallback_families }};{%- endcapture -%}
  {%- style -%}
    {%- for variant in font_body_shopify.variants -%}{{ variant | font_face: font_display: 'swap' }}{%- endfor -%}
  {%- endstyle -%}
{% endif %}

{% if font_type_heading == 'default_font' %}
  <!-- {{ 'Alexandria-Regular' | asset_url | preload_tag: as: 'font', type: 'font/ttf', crossorigin: 'anonymous' }} -->
  {% style %}
    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Light.ttf?v=1749994577") format("truetype");
      font-weight: 300;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Regular.ttf?v=1749994577") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Medium.ttf?v=1749994577") format("truetype");
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Alexandria";
      src: url("https://cdn.shopify.com/s/files/1/0934/9968/7185/files/Alexandria-Bold.ttf?v=1749994577") format("truetype");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
  {% endstyle %}
{% elsif font_type_heading == 'google' %}
  {% assign font_family_heading = font_heading_google %}
  {{ font_body_heading_embed }}
{% else %}
  {% # theme-check-disable AssetPreload %}
  <link rel="preload" as="font" href="{{ font_heading_shopify | font_url }}" type="font/woff2" crossorigin>
  {% # theme-check-disable AssetPreload %}
  {%- capture font_family_heading -%}{{ font_heading_shopify.family }}, {{ font_heading_shopify.fallback_families }};{%- endcapture -%}
  {%- style -%}
    {%- for variant in font_heading_shopify.variants -%}{{ variant | font_face: font_display: 'swap' }}{%- endfor -%}
  {%- endstyle -%}
{% endif %}

{% liquid
  assign font_menu_family = font_family_body
  assign font_menu_type = theme_st.menu_font
  if font_menu_type == 'body_font'
    assign font_menu_family = font_family_body
  else
    assign font_menu_family = font_family_heading
  endif

  assign font_button_family = font_family_body
  assign font_button_type = theme_st.button_font
  if font_button_type == 'body_font'
    assign font_button_family = font_family_body
  else
    assign font_button_family = font_family_heading
  endif
%}

{% comment %} End check setting font {% endcomment %}

{% style %}
  :root {
    --body-font: {{ font_family_body }}, sans-serif;
    --heading-font: {{ font_family_heading }}, sans-serif;
    --menu-font: {{ font_menu_family }}, sans-serif;
    --btn-font: {{ font_button_family }}, sans-serif;
  }
{% endstyle %}
